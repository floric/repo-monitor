{
  "name": "repo-monitor-action",
  "version": "1.8.0",
  "repository": "https://github.com/floric/repo-monitor-action.git",
  "author": "Florian Richter <floririchte@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "release": "npx standard-version",
    "commit": "git add . && npx git-cz --disable-emoji -S",
    "test": "jest"
  },
  "jest": {
    "forceExit": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "text-summary",
      "json-summary"
    ],
    "setupFiles": [
      "./test/setupTests.ts"
    ],
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.dev.json"
      }
    }
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^4.0.0",
    "@types/react-dom": "^16.9.8",
    "dayjs": "^1.8.35",
    "js-yaml": "^3.14.0",
    "purgecss": "^2.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-vis": "^1.11.7",
    "tailwindcss": "^1.8.9"
  },
  "devDependencies": {
    "@testing-library/react": "^11.0.2",
    "@types/chart.js": "^2.9.24",
    "@types/jest": "^26.0.13",
    "@types/js-yaml": "^3.12.5",
    "@types/react": "^16.9.49",
    "@types/react-vis": "^1.11.3",
    "jest": "^26.4.2",
    "jest-image-snapshot": "^4.1.0",
    "jsdom-screenshot": "^3.2.0",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^26.2.0",
    "typescript": "^4.0.2"
  }
}
